<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    tools:context="com.b8a3.lottiestudy.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="LottieAnimationView"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_v"
            android:layout_width="200dp"
            android:layout_height="200dp"/>


        <TextView
            android:id="@+id/tv_json_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            tools:text="json 文件" />

        <Button
            android:id="@+id/bt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一个动画" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_v_1"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

        <SeekBar
            android:id="@+id/sb_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="Drawable"/>
        <ImageView
            android:id="@+id/lottie_v1"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/progress_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置backgroundDrawable"/>

        <View
            android:id="@+id/lottie_v2"
            android:layout_width="200dp"
            android:layout_height="200dp" />

    </LinearLayout>
</LinearLayout>
