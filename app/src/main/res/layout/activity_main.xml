<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.b8a3.lottiestudy.MainActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_v"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_autoPlay="true"
        app:lottie_cacheStrategy="none"
        app:lottie_colorFilter="@color/colorAccent"
        app:lottie_enableMergePathsForKitKatAndAbove="true"
        app:lottie_fileName="Mobilo/A.json"
        app:lottie_imageAssetsFolder="Images\WeAccept"
        app:lottie_loop="true"
        app:lottie_progress="50"
        app:srcCompat="@color/colorAccent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_v1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_autoPlay="true" />
    <TextView
        android:id="@+id/progress_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_json_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="json 文件" />

    <Button
        android:id="@+id/bt_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下一个" />

    <Button
        android:id="@+id/bt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动画" />

    <Button
        android:id="@+id/bt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="另一个" />
</LinearLayout>
